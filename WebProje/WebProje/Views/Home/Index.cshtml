@{
    ViewData["Title"] = "Ana Sayfa";
}

<link rel="stylesheet" href="~/css/anasayfa.css">

<!-- Video Section -->
<div class="video-container">
    <video autoplay muted loop playsinline class="hero-video">
        <source src="~/images/video.mp4" type="video/mp4">
        Tarayıcınız video etiketini desteklemiyor.
    </video>
</div>

<div class="container mt-4">
    <section class="customization">
        <h2>Kişiselleştirilmiş Tasarımlar</h2>
        <div class="custom-steps">
            <div class="step-card">
                <img src="~/images/photo.png" alt="Fotoğraflı Ürünler" class="step-image">
            </div>
            <div class="step-card">
                <img src="~/images/fenerbahce-havlu.png" alt="Fenerbahçe Havlu" class="step-image">
            </div>
            <div class="step-card">
                <img src="~/images/yastik.png" alt="Özel Yastık" class="step-image">
            </div>
        </div>
    </section>

    <section class="featured">
        <h2>Öne Çıkan Ürünler</h2>
        <div class="product-grid">
            <div class="product-card">
                <img src="~/images/one-cikanlar-1.jpg" alt="Öne Çıkan Ürün 1" class="product-image">
            </div>
            <div class="product-card">
                <img src="~/images/one-cikanlar-2.jpg" alt="Öne Çıkan Ürün 2" class="product-image">
            </div>
            <div class="product-card">
                <img src="~/images/one-cikanlar-3.jpg" alt="Öne Çıkan Ürün 3" class="product-image">
            </div>
            <div class="product-card">
                <img src="~/images/one-cikanlar-4.jpg" alt="Öne Çıkan Ürün 4" class="product-image">
            </div>
        </div>
    </section>
</div>
