@{
    ViewData["Title"] = "Ana Sayfa - GKATELİERS";
}

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(rgba(255,255,255,0.9), rgba(255,255,255,0.9)), url('../images/hero-bg.jpg');
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background-size: cover;
        background-position: center;
        background-color: #ffd6e9;
    }

    .hero-content {
        max-width: 800px;
        padding: 2rem;
    }

        .hero-content h1 {
            font-size: 2.8rem;
            margin-bottom: 1rem;
            color: #4a4a4a;
        }

        .hero-content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            color: #4a4a4a;
        }

    .cta-button {
        padding: 1rem 2rem;
        background-color: #ff9ecd;
        color: white;
        text-decoration: none;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .cta-button:hover {
            background-color: #ff7eb8;
        }

    /* Customization Section */
    .customization {
        padding: 4rem 2rem;
        background-color: #fff;
    }

        .customization h2 {
            text-align: center;
            margin-bottom: 3rem;
            color: #4a4a4a;
        }

    .custom-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .step-card {
        text-align: center;
        padding: 2rem;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .step-card i {
            font-size: 2.5rem;
            color: #ff9ecd;
            margin-bottom: 1rem;
        }

    /* Categories Section */
    .categories {
        padding: 4rem 2rem;
        background-color: #a7d7f9;
    }

        .categories h2 {
            text-align: center;
            margin-bottom: 3rem;
            color: #4a4a4a;
        }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .category-card {
        background-color: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }

        .category-card:hover {
            transform: translateY(-5px);
        }

    .category-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }

    .category-content {
        padding: 1.5rem;
        text-align: center;
    }

    /* Featured Products */
    .featured {
        padding: 4rem 2rem;
        background-color: #fff;
    }

        .featured h2 {
            text-align: center;
            margin-bottom: 3rem;
            color: #4a4a4a;
        }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .product-card {
        background-color: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .product-content {
        padding: 1.5rem;
        text-align: center;
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>Bebeğiniz İçin Özel Tasarımlar</h1>
        <p>İsme özel tasarlanmış, %100 pamuklu, kaliteli bebek kıyafetleri...</p>
        <a href="#" class="cta-button">Koleksiyonu Keşfet</a>
    </div>
</section>

<!-- Customization Section -->
<section class="customization">
    <h2>Kişiselleştirme Nasıl Çalışır?</h2>
    <div class="custom-steps">
        <div class="step-card">
            <i class="fas fa-tshirt"></i>
            <h3>1. Ürün Seçimi</h3>
            <p>Koleksiyonumuzdan beğendiğiniz ürünü seçin</p>
        </div>
        <div class="step-card">
            <i class="fas fa-pencil-alt"></i>
            <h3>2. Kişiselleştirme</h3>
            <p>İsim, tarih veya özel mesajınızı belirleyin</p>
        </div>
        <div class="step-card">
            <i class="fas fa-heart"></i>
            <h3>3. Özel Üretim</h3>
            <p>Siparişiniz özenle hazırlanıp kargolanır</p>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories">
    <h2>Kategoriler</h2>
    <div class="category-grid">
        <div class="category-card">
            <img src="~/images/newborn.jpg" alt="Yeni Doğan" class="category-image">
            <div class="category-content">
                <h3>Yeni Doğan</h3>
                <p>0-3 Ay</p>
            </div>
        </div>
        <div class="category-card">
            <img src="~/images/baby.jpg" alt="Bebek" class="category-image">
            <div class="category-content">
                <h3>Bebek</h3>
                <p>3-24 Ay</p>
            </div>
        </div>
        <div class="category-card">
            <img src="~/images/toddler.jpg" alt="Küçük Çocuk" class="category-image">
            <div class="category-content">
                <h3>Küçük Çocuk</h3>
                <p>2-4 Yaş</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="featured">
    <h2>Öne Çıkan Ürünler</h2>
    <div class="product-grid">
        <div class="product-card">
            <img src="~/images/product1.jpg" alt="Ürün 1" class="product-image">
            <div class="product-content">
                <h3>İsme Özel Tulum</h3>
                <p>%100 Organik Pamuk</p>
            </div>
        </div>
        <div class="product-card">
            <img src="~/images/product2.jpg" alt="Ürün 2" class="product-image">
            <div class="product-content">
                <h3>Kişiye Özel Body</h3>
                <p>Nakış İşlemeli</p>
            </div>
        </div>
        <div class="product-card">
            <img src="~/images/product3.jpg" alt="Ürün 3" class="product-image">
            <div class="product-content">
                <h3>İsimli Battaniye</h3>
                <p>Yumuşak Dokulu</p>
            </div>
        </div>
        <div class="product-card">
            <img src="~/images/product4.jpg" alt="Ürün 4" class="product-image">
            <div class="product-content">
                <h3>Özel Tasarım Set</h3>
                <p>3'lü Takım</p>
            </div>
        </div>
    </div>
</section>