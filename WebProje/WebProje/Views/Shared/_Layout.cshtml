<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - GKATELİERS</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav>
            <div class="logo">GKATELİERS</div>
            <div class="nav-links">
                <a href="@Url.Action("Index", "Home")">Ana Sayfa</a>
                <a href="@Url.Action("UrunListe", "Urun")">Mağaza</a>
                <a href="@Url.Action("Index", "Hakkimizda")">Hakkımızda</a>
                <a href="@Url.Action("KullaniciGiris", "Kullanici")">Giriş Yap</a>
                
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>GKATELİERS</h3>
                <p>Bebeğiniz için özel tasarımlar</p>
            </div>
            <div class="footer-section">
                <h3>Kategoriler</h3>
                <ul>
                    <li><a href="@Url.Action("Category", "Product", new { id = 1 })">Yeni Doğan</a></li>
                    <li><a href="@Url.Action("Category", "Product", new { id = 2 })">Bebek</a></li>
                    <li><a href="@Url.Action("Category", "Product", new { id = 3 })">Küçük Çocuk</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Kişiselleştirme</h3>
                <ul>
                    <li><a href="@Url.Action("HowItWorks", "Home")">Nasıl Çalışır?</a></li>
                    <li><a href="@Url.Action("Examples", "Product")">Örnek Tasarımlar</a></li>
                    <li><a href="@Url.Action("FAQ", "Home")">Sık Sorulan Sorular</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>İletişim</h3>
                <ul>
                    <li>Tel: (xxx) xxx xx xx</li>
                    <li>Adres: xxxxxxxxxxxx </li>
                    <li>E-posta: info@gkateliers.com</li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>