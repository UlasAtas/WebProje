<html>
<body>


    <form method="post" asp-controller="Kullanici" asp-action="KullaniciKayit">

        <div class="form-group">
            <label for="Ad">Ad:</label>
            <input type="text" class="form-control" id="Ad" name="Ad" required>
        </div>
        

        <div class="form-group">
            <label for="Soyad">Soyad:</label>
            <input type="text" class="form-control" id="Soyad" name="Soyad" required>
        </div>
        

        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" class="form-control" id="Email" name="Email" required>
        </div>
        

        <div class="form-group">
            <label for="Sifre">Sifre:</label>
            <input type="password" class="form-control" id="Sifre" name="Sifre" required>
        </div>
        

         <label for="TelNo">Telefon No:</label>
        <input type="tel" id="TelNo" name="TelNo" required> 

        <button type="submit" class="btn btn-warning"> Kaydet </button>


    </form>
</body>
</html>