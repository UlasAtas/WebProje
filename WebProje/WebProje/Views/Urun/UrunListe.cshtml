@model IEnumerable<Urun>
@{
    ViewData["Title"] = "Ürünler";
}

<div class="container">
    <h2 class="mb-4">Ürünlerimiz</h2>

    <div class="row">
        @foreach (var urun in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(urun.ResimUrl))
                    {
                        <img src="@urun.ResimUrl" class="card-img-top" alt="@urun.UrunAdi" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/images/lidya-tulum-takim.jpg" class="card-img-top" alt="Varsayılan ürün resmi" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@urun.UrunAdi</h5>
                        @* <p class="card-text">@(urun.Aciklama?.Length > 100 ? urun.Aciklama.Substring(0, 97) + "..." : urun.Aciklama)</p> *@
                        <h6 class="card-subtitle mb-2 text-muted">@urun.Fiyat.ToString("C")</h6>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a asp-action="UrunDetay" asp-route-id="@urun.UrunId" class="btn btn-primary">Detaylar</a>
                        @if (urun.StokMiktari > 0)
                        {
                            <button class="btn btn-success" onclick="sepeteEkle(@urun.UrunId)">Sepete Ekle</button>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>Stokta Yok</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

